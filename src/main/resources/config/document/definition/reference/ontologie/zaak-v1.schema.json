{
  "$id": "zaak.schema",
  "type": "object",
  "title": "Model Zaak",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
  },
  "definitions": {
    "integer": {
      "type": "string",
      "pattern": "(^-|^)(0|[1-9][0-9]*)$"
    },
    "currency": {
      "type": "string",
      "pattern": "(^-|^+|^)(0|[1-9][0-9]+)($|,[0-9][0-9]$)"
    },
    "url": {
      "type": "string",
      "pattern": "^(http://|https://).*"
    },
    "datumTijd": {
      "type": "string",
      "pattern": "^([0-2][0-9]|3[0-1]|[1-9])-(0[1-9]|[1-9]|1[0-2])-(19|20)[0-9][0-9] T[0-2][0-9]:[0-5][0-9]:[0-5][0-9]"
    }
  }
}